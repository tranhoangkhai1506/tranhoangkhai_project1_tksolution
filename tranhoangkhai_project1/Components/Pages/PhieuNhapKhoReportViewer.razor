        }

        .grid-header {
            grid-column: 1 / -1; /* header chiếm toàn bộ cột */
            text-align: center;
            font-size: 2em; /* tăng kích thước font cho tiêu đề */
            font-weight: bold;
            padding: 5px 0; /* đệm trên và dưới cho tiêu đề */
        }

